{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "(gdb) Launch", // Adjust name depending on your compiler
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/src/main.exe", // Path to your executable file
        "args": [], // Add any program arguments if needed
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,  // Set this to true if you prefer an external console
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build", // CMake build task to run before debugging
        "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe", // Path to gdb
        "targetArchitecture": "x86_64",
        "logging": {
          "trace": true,
          "traceResponse": true,
          "engineLogging": true,
          "exceptions": true,
          "moduleLoad": true,
          "programOutput": true,
          "threadEvents": true,
          "stopOnException": false
        },
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }