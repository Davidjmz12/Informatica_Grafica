{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",                     // Task label used in launch.json
        "type": "shell",                      // Use shell to run CMake command
        "command": "cmake --build build --target main",     // Command to build your project using CMake
        "group": {
          "kind": "build",                    // Indicates it's a build task
          "isDefault": true                   // This will run when "build" is called
        },
        "problemMatcher": ["$gcc"],           // Matches GCC build errors in the output
        "detail": "Task to build the CMake project."
      }
    ]
  }
  