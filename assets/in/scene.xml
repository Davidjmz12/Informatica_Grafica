<Scene name="Example scene">
    <Camera>
        <center>0 0 -3.5</center>
        <left>-1 0 0</left>
        <up>0 1 0</up>
        <front>0 0 3</front>
        <resolution>256 256</resolution>
    </Camera>

    <Property name="red">
        <kd>1 0 0</kd>
    </Property>

    <Property name="dielectric">
        <kt>1 1 1</kt>
        <refraction_index>1.5</refraction_index>
    </Property>

    <Property name="plastic magenta">
        <kd>0.6 0 0.6</kd>
        <ks>0.4 0.4 0.4</ks>
    </Property>
    <Property name="green">
        <kd>0 1 0</kd>
    </Property>

    <Property name="blue">
        <kd>0 0 1</kd>
    </Property>

    <Property name="white">
        <kd>1 1 1</kd>
    </Property>

    <Property name="yellow">
        <kd>1 1 0</kd>
    </Property>

    <Property name="cyan">
        <kd>0 1 1</kd>
    </Property>

    <Property name="magenta">
        <kd>1 0 1</kd>
    </Property>

    <Geometry type="Plane" brdf="white">
        <normal>0 1 0</normal>
        <distance>1</distance>
    </Geometry>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 -1 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="white">
        <normal>0 0 -1</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="red">
        <normal>1 0 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="green">
        <normal>-1 0 0</normal>
        <distance>1</distance>
    </Geometry>


    <Geometry type="Sphere" brdf="plastic magenta">
        <center>-0.5 -0.7 0.25</center>
        <radius>0.3</radius>
    </Geometry>

    <Geometry type="Sphere" brdf="dielectric">
        <center>0.5 -0.7 -0.25</center>
        <radius>0.3</radius>
    </Geometry>

    <PunctualLight>
        <position>0 0.5 0</position>
        <power>1 1 1</power>
    </PunctualLight>

    <Render type="ray-tracing"></Render>

    <ToneMapping type="gamma">
        <gamma>2.2</gamma>
        <V>max</V>
    </ToneMapping>

</Scene>
