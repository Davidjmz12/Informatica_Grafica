<Scene name="Scene Light comparision">
    <Camera>
        <center>0 0 -3.5</center>
        <left>-1 0 0</left>
        <up>0 1 0</up>
        <front>0 0 3</front>
        <resolution>256 256</resolution>
    </Camera>

    <Property name="specular"> 
        <ks>1 1 1</ks>
    </Property>

    <Property name="white">
        <kd>1 1 1</kd>
    </Property>

    <Property name="red">
        <kd>1 0 0</kd>
    </Property>

    <Property name="cyan">
        <kd>0 1 1</kd>
    </Property>
    
    <Property name="magenta">
        <kd>0.9 0.9 0.9</kd>
        <ks>0.1 0.1 0.1</ks>
        <texture type="ppm-texture">in/charizar-texture.ppm</texture>
    </Property>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 1 0</normal>
        <distance>1</distance>
    </Geometry>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 -1 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="white">
        <normal>0 0 -1</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="red">
        <normal>1 0 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="cyan">
        <normal>-1 0 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Mesh" brdf="magenta">
        <file>in/charizar.ply</file>
    </Geometry>

    <Render type="ray-tracing"></Render>

    <ToneMapping type="gamma">
        <gamma>2.2</gamma>
        <V>max</V>
    </ToneMapping>

    <PunctualLight>
        <power>1 1 1</power>
        <position>0 0.7 0</position>
    </PunctualLight>
</Scene>
