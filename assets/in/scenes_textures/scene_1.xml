<Scene name="Scene Light comparision">
    <Camera>
        <center>0 0 -3.5</center>
        <left>-1 0 0</left>
        <up>0 1 0</up>
        <front>0 0 3</front>
        <resolution>256 256</resolution>
    </Camera>

    <Property name="specular"> 
        <ks>1 1 1</ks>
    </Property>

    <Property name="white">
        <kd>1 1 1</kd>
    </Property>

    <Property name="red">
        <kd>1 0 0</kd>
    </Property>

    <Property name="cyan">
        <kd>0 1 1</kd>
    </Property>
    
    <Property name="black">
        <kd>0.1 0.1 0.1</kd>
    </Property>
    
    <Property name="texture-face">
        <texture type="ppm-texture">in/arbol_b.ppm</texture>
        <kd>1 1 1</kd>
    </Property>

    <Property name="texture-sphere">
        <texture type="ppm-texture">in/black_white.ppm</texture>
        <kd>0.7 0.7 0.7</kd>
        <kt>0.3 0.3 0.3</kt>
    </Property>

    <Property name="texture-box">
        <texture type="ppm-texture">in/tiles.ppm</texture>
        <kd>0.7 0.7 0.7</kd>
        <ks>0.3 0.3 0.3</ks>
    </Property>


    <Geometry type="Plane" brdf="white">
        <normal>0 1 0</normal>
        <distance>1</distance>
    </Geometry>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 -1 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="white">
        <normal>0 0 -1</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="red">
        <normal>1 0 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="cyan">
        <normal>-1 0 0</normal>
        <distance>1</distance>
    </Geometry>
    
    <Geometry type="Face" brdf="texture-face">
        <center>0 0 0.98</center>
        <normal>0 0 -1</normal>
        <v>0 0.5 0</v>
        <u>0.5 0 0</u>
    </Geometry>

    <Geometry type="Face" brdf="black">
        <center>0 0 0.99</center>
        <normal>0 0 -1</normal>
        <v>0 0.54 0</v>
        <u>0.54 0 0</u>
    </Geometry>

    <Geometry type="Sphere" brdf="texture-sphere">
        <center>-0.5 -0.6 -0.25</center>
        <radius>0.4</radius>
    </Geometry>
    
    <Geometry type="Box" brdf="texture-box">
        <center>0.5 -0.5 0.5</center>
        <x>-0.2 0 0.2</x>
        <y>0 0.5 0</y>
        <z>0.2 0 0.2</z>
    </Geometry>

    <Render type="photon-mapping">
        <n_photons>1000000</n_photons>
        <n_neighbours>1000</n_neighbours>
        <radius>0.1</radius>
        <Kernel type="constant"></Kernel>
        <type>explicit</type>
    </Render>


    <ToneMapping type="gamma">
        <gamma>2.2</gamma>
        <V>max</V>
    </ToneMapping>

    <PunctualLight>
        <power>1 1 1</power>
        <position>0 0.7 0</position>
    </PunctualLight>
</Scene>
