<Scene name="Scene Light comparision">
    
    <Camera>
        <center>0 0 -3.5</center>
        <left>-1 0 0</left>
        <up>0 1 0</up>
        <front>0 0 3</front>
        <resolution>256 256</resolution>
    </Camera>

    <Property name="specular"> 
        <ks>1 1 1</ks>
    </Property>

    <Property name="brown">
        <kd>0.5 0.2 0</kd>
    </Property>


    <Property name="plastic-mag">
        <kd>0.5 0 0.5</kd>
        <ks>0.5 0.5 0.5</ks>
    </Property>

    <Property name="plastic-cyan">
        <kd>0 0.5 0.5</kd>
        <ks>0.5 0.5 0.5</ks>
    </Property>

    <Property name="plastic-yellow">
        <kd>0.5 0 0</kd>
        <ks>0.5 0.5 0.5</ks>
    </Property>

    <Property name="white">
        <kd>1 1 1</kd>
    </Property>

    <Property name="red">
        <kd>1 0 0</kd>
    </Property>

    <Property name="cyan">
        <kd>0 1 1</kd>
    </Property>

    <Property name="black">
        <kd>0.1 0.1 0.1</kd>
    </Property>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 1 0</normal>
        <distance>1</distance>
    </Geometry>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 -1 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="white">
        <normal>0 0 -1</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="red">
        <normal>1 0 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="cyan">
        <normal>-1 0 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Cylinder" brdf="plastic-mag">
        <center>-0.5 -1 -0.25</center>
        <radius>0.3</radius>
        <height>0 0.3 0</height>
    </Geometry>

    <Geometry type="Cylinder" brdf="plastic-cyan">
        <center>-0.4 -0.7 -0.25</center>
        <radius>0.3</radius>
        <height>0 0.3 0</height>
    </Geometry>

    <Geometry type="Cylinder" brdf="plastic-yellow">
        <center>-0.1 -0.7 -0.25</center>
        <radius>0.3</radius>
        <height>0.3 0 0</height>
    </Geometry>

    <Geometry type="Ellipsoid" brdf="specular">
        <center>0.5 -0.5 0.5</center>
        <a>0.3</a>
        <b>0.5</b>
        <c>0.4</c>
    </Geometry>

    <Geometry type="Face" brdf="black">
        <normal>0 0 -1</normal>
        <center>0 0 0.99</center>
        <u>0 0.5 0</u>
        <v>0.5 0 0</v>
    </Geometry>

    <Geometry type="Disk" brdf="white">
        <center>0 0 0.98</center>
        <normal>0 0 -1</normal>
        <radius>0.4</radius>
    </Geometry>

    <Render type="photon-mapping">
        <n_photons>1000000</n_photons>
        <n_neighbours>1000</n_neighbours>
        <radius>0.1</radius>
        <Kernel type="constant"></Kernel>
        <type>explicit</type>
    </Render>


    <ToneMapping type="gamma">
        <gamma>2.2</gamma>
        <V>max</V>
    </ToneMapping>

    <PunctualLight>
        <power>1 1 1</power>
        <position>0 0.6 0</position>
    </PunctualLight>
</Scene>
