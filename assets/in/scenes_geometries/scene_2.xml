<Scene name="Scene Light comparision">
    
    <Camera>
        <center>0 0 -3.5</center>
        <left>-1 0 0</left>
        <up>0 1 0</up>
        <front>0 0 3</front>
        <resolution>256 256</resolution>
    </Camera>

    <Property name="specular"> 
        <ks>1 1 1</ks>
    </Property>

    <Property name="brown">
        <kd>0.5 0.2 0</kd>
    </Property>


    <Property name="plastic-mag">
        <kd>1 0 1</kd>
    </Property>

    <Property name="plastic-cyan">
        <kd>0 1 1</kd>
    </Property>


    <Property name="white">
        <kd>1 1 1</kd>
    </Property>

    <Property name="red">
        <kd>1 0 0</kd>
    </Property>

    <Property name="cyan">
        <kd>1 1 0</kd>
    </Property>

    <Property name="black">
        <kd>0.1 0.1 0.1</kd>
    </Property>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 1 0</normal>
        <distance>1</distance>
    </Geometry>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 -1 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="white">
        <normal>0 0 -1</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="red">
        <normal>1 0 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="cyan">
        <normal>-1 0 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Mesh" brdf="plastic-mag">
        <file>in/peng.ply</file>
    </Geometry>

    <Geometry type="Box" brdf="plastic-cyan">
        <center>0.4 -0.7 -0.25</center>
        <x>-0.15 0 0.15</x>
        <y>0 0.3 0</y>
        <z>0.15 0 0.15</z>
    </Geometry>

    <Render type="ray-tracing"></Render>

    <ToneMapping type="gamma">
        <gamma>2.2</gamma>
        <V>max</V>
    </ToneMapping>

    <PunctualLight>
        <power>1 1 1</power>
        <position>0 0.6 0</position>
    </PunctualLight>
</Scene>
