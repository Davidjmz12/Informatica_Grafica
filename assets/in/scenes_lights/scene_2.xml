<Scene name="Example scene">
    <Camera>
        <center>0 0 -3.5</center>
        <left>-1 0 0</left>
        <up>0 1 0</up>
        <front>0 0 3</front>
        <resolution>256 256</resolution>
    </Camera>

    <Property name="red">
        <kd>1 0 0</kd>
    </Property>

    <Property name="dielectric">
        <kt>0.8 0.8 0.8</kt>
        <ks>0.2 0.2 0.2</ks>
        <refraction_index>1.5</refraction_index>
    </Property>

    <Property name="plastic magenta">
        <kd>0.5 0 0.5</kd>
        <ks>0.5 0.0 0.5</ks>
    </Property>
    <Property name="green">
        <kd>0 1 0</kd>
    </Property>

    <Property name="blue">
        <kd>0 0 1</kd>
    </Property>

    <Property name="white">
        <kd>1 1 1</kd>
    </Property>

    <Property name="yellow">
        <kd>1 1 0</kd>
    </Property>

    <Property name="cyan">
        <kd>0 1 1</kd>
    </Property>

    <Property name="magenta">
        <kd>1 0 1</kd>
    </Property>

    <Geometry type="Plane" brdf="white">
        <normal>0 1 0</normal>
        <distance>1</distance>
    </Geometry>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 -1 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="white">
        <normal>0 0 -1</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="red">
        <normal>1 0 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="green">
        <normal>-1 0 0</normal>
        <distance>1</distance>
    </Geometry>


    <Geometry type="Sphere" brdf="magenta">
        <center>-0.5 -0.7 0.25</center>
        <radius>0.3</radius>
    </Geometry>

    <Geometry type="Sphere" brdf="cyan">
        <center>0.5 -0.7 -0.25</center>
        <radius>0.3</radius>
    </Geometry>

    <Render type="photon-mapping">
        <n_photons>1000000</n_photons>
        <n_neighbours>1000</n_neighbours>
        <radius>0.05</radius>
        <Kernel type="constant"></Kernel>
        <type>explicit</type>
    </Render>

    <ToneMapping type="gamma">
        <gamma>2.2</gamma>
        <V>max</V>
    </ToneMapping>

    <PunctualLight>
        <power>1 1 1</power>
        <position>0 0.5 0</position>
    </PunctualLight>

</Scene>
