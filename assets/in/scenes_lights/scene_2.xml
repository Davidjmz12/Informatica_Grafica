<Scene name="Scene Light comparision">
    <Camera>
        <center>0 0 -3.5</center>
        <left>-1 0 0</left>
        <up>0 1 0</up>
        <front>0 0 3</front>
        <resolution>256 256</resolution>
    </Camera>

    <Property name="refractive"> 
        <kt>1 1 1</kt>
        <refraction_index>1.5</refraction_index>
    </Property>

    <Property name="white">
        <kd>1 1 1</kd>
    </Property>

    <Property name="red">
        <kd>1 0 0</kd>
    </Property>

    <Property name="cyan">
        <kd>0 1 1</kd>
    </Property>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 1 0</normal>
        <distance>1</distance>
    </Geometry>
    
    <Geometry type="Plane" brdf="white">
        <normal>0 -1 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="white">
        <normal>0 0 -1</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="red">
        <normal>1 0 0</normal>
        <distance>1</distance>
    </Geometry>

    <Geometry type="Plane" brdf="cyan">
        <normal>-1 0 0</normal>
        <distance>1</distance>
    </Geometry>


    <Geometry type="Sphere" brdf="refractive">
        <center>0.25 -0.7 -0.15</center>
        <radius>0.3</radius>
    </Geometry>

    <Geometry type="Sphere" brdf="refractive">
        <center>-0.4 -0.6 0.25</center>
        <radius>0.4</radius>
    </Geometry>

    <Render type="photon-mapping">
        <n_photons>1000000</n_photons>
        <n_neighbours>1000</n_neighbours>
        <radius>0.1</radius>
        <Kernel type="constant"></Kernel>
        <type>direct</type>
    </Render>

    <ToneMapping type="gamma">
        <gamma>1.7</gamma>
        <V>max</V>
    </ToneMapping>

    <Geometry type="Face" emission="1 1 1">
        <center>0 0.99 0</center>
        <normal>0 -1 0</normal>
        <u>0.2 0 0.2</u>
        <v>-0.2 0 0.2</v>
    </Geometry>
</Scene>
